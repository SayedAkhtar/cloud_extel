---
import { Icon } from "astro-icon/components";
---

<footer class="bg-[#1C2632] text-gray-300 py-12">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-8">
