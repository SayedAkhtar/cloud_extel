---
import Layout from "../layouts/Layout.astro";
import MainSectionComponent from "../components/MainSectionComponent.astro";
import OurSolutionsTabs from "../components/OurSolutionsTabs";
import customersData from '../data/our-customers.json';
---
<Layout title="Our Solutions | Cloud Extel">
    <MainSectionComponent title="Our Solutions" image="/public/images/our-solutions.png" />

    <section class="container">
        <OurSolutionsTabs />
    </section>
    <section class="bg-primary-color">
        <div class="container">
            <div class="max-w-[73rem] py-32 mx-auto space-y-10">
                <div class="heading-1 text-center text-white">Our Customers</div>
                <div class="grid grid-cols-3 gap-5">
                    {customersData.map((item) => {
                        return (<article>
                            <img src={item.image} alt={item.name} />
                        </article>)
                    })}
                </div>
            </div>
        </div>
    </section>
    <section class="container">
            <div class="max-w-[73rem] py-32 mx-auto space-y-10">
                <div class="heading-1 text-center text-white">Our Subsidiaries</div>
                <div class="grid grid-cols-3 gap-5">
                    <div class="bg-[#3789E6] p-8 text-white">
                        <h3 class="heading-6">
                            Bombay Gas<br>Company<br>Proprietary Private Limited
                        </h3>
                    </div>
                    <div class="bg-[#FF9124] p-8 text-white">
                        <h3 class="heading-6">Orange Waves
                        <br>Networks</h3>
                    </div>
                    <div class="bg-[#37C4CD] p-8 text-white">
                        <h3 class="heading-6">Netfra Solutions</h3>
                    </div>
                </div>
            </div>
    </section>
</Layout>

